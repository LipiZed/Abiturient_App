@page
@model DB_App.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Вход в аккаунт</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Input.Username">Логин</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Пароль</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-margin-top">Войти</button>
</form>
